<div class="card mb-3" style="max-width: 100%;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="{{ item.url ~ 'images/' ~ item.posterFileName }}?v=2" alt="{{ item.title|raw }}" class="img-fluid rounded-start">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><a href="{{ item.url }}">{{ item.title|raw }}</a></h5>
                <p class="card-text">{{ item.description|raw }}</p>
            </div>
        </div>
    </div>
</div>
